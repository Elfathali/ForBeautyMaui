<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ForBeautyMaui.ViewPages.MainTappedPage.ProfilePages.SettingsPage">
    <NavigationPage.TitleView>
                <Label Text ="الإعدادات" 
                       HorizontalOptions="Center" VerticalOptions="Center"
                       FontFamily="times"/>


    </NavigationPage.TitleView>
    <ContentPage.Content>
        <Grid x:Name="GridSettings" BackgroundColor="White" Grid.Row="0" >
    <Grid.RowDefinitions>
        <RowDefinition Height="*" /> <!-- Content -->
    </Grid.RowDefinitions>
    <Grid BackgroundColor="White" HeightRequest="50">
        <BoxView BackgroundColor="#D4D4D4" HeightRequest="1" HorizontalOptions="FillAndExpand" VerticalOptions="End" />
    </Grid>
                     <StackLayout Grid.Row="0" VerticalOptions="Start" BackgroundColor="White"
                     Margin="10,0,10,0"
                     Spacing="10">
            <Frame Padding="0" 
                         HasShadow="False">
                      <StackLayout Padding="0" FlowDirection="RightToLeft" Margin="10">
                        <Label Text="إشعارات التوصيل" FontFamily="times" FontSize="Large"/>
                                        <StackLayout Orientation="Horizontal">
                                            <CheckBox x:Name="checkBoxNotificationOn" IsChecked="True" Color="Black" VerticalOptions="Center" />
                                            <Label Text="تشغيل" VerticalOptions="Center" FontFamily="times" FontSize="19"/>
                                        </StackLayout>
                                        <StackLayout Orientation="Horizontal">
                                            <CheckBox x:Name="checkBoxNotificationOff"  Color="Black" VerticalOptions="Center" />
                                            <Label Text="ايقاف" VerticalOptions="Center" FontFamily="times" FontSize="19"/>
                                        </StackLayout>
                    </StackLayout>
                  </Frame>
           
              
                         <Button Text="حفظ التغيرات" BackgroundColor="Black" FontFamily="times" FontSize="18"
                                 TextColor="White"
                                 Margin="5"
                                 />
           </StackLayout>
                 </Grid>
    </ContentPage.Content>
</ContentPage>

