<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
     xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ForBeautyMaui.ViewPages.WelcomePage"
    xmlns:language="clr-namespace:ForBeautyMaui.Resources.Languages"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid IgnoreSafeArea="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image Source="logo.png"
                   Grid.Row="0"
                   Margin="0,0,0,150"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   HeightRequest="230"
                   WidthRequest="230"
                   Aspect="Fill"/>


            <Border BackgroundColor="White"
                    Opacity="0.9"
                    Margin="0,60,0,0"
                    Grid.Row="1"
                    VerticalOptions="Fill"
                    HorizontalOptions="Fill"
                    StrokeThickness="0">
                <Border.Shadow>
                    <Shadow Brush="Black"
                Offset="0,-5"
                Radius="20"
                Opacity="0.4" />
                </Border.Shadow>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="30,30,0,0" />
                </Border.StrokeShape>

                
            </Border>
            <StackLayout Spacing="10"  Grid.Row="1"
             Margin="0,120,0,0">


    <Button Text="{x:Static language:AppResources.CreateAnAccount}" FontFamily="times" FontSize="23"
                   TextColor="White"
                   VerticalOptions="Center"
                   
                   CornerRadius="20"
                   Margin="35,0,35,15"
                   Command="{Binding CommandToRegisterPage}" >
        <Button.Background>
            <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                <GradientStop Color="HotPink" Offset="1.0" />
                <GradientStop Color="Blue" Offset="0.0" />
            </LinearGradientBrush>
        </Button.Background>

    </Button>

    <Button Text="{x:Static language:AppResources.Login}" FontFamily="times" FontSize="23"
                   TextColor="White"
                   VerticalOptions="Center"
                   
                   CornerRadius="20"
                   Margin="35,0,35,15"
                   Command="{Binding CommandToLoginPage}">
            <Button.Background>
                <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                    <GradientStop Color="HotPink" Offset="1.0" />
                    <GradientStop Color="Blue" Offset="0.0" />
                </LinearGradientBrush>
            </Button.Background>

        </Button>
  

<StackLayout Margin="0,0,0,0" HorizontalOptions="Center">
        <Button x:Name="ButtonFreeTrial" BackgroundColor="Transparent" IsVisible="True" Text="لا,شكرا" FontFamily="times" TextColor="Black" FontSize="Medium"/>
    </StackLayout>
                <Label  Text="{Binding Copyright}"
           HorizontalOptions="Center"
           VerticalOptions="End"
           Margin="0,10,0,0"
           TextColor="Black"
           FontSize="Small"/>
</StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>

